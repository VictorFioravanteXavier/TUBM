<%- include('includes/head')%>
<link rel="stylesheet" href="/frontend/assets/css/login/style.css">

<main>
  <div class="container">
    <%- include('includes/messages') %>

    <div class="row"> 
      <div class="col-lg">
        <div class="col-lg logo mb-5">
          <div class="icon">
            <i class="fa-solid fa-cart-shopping"></i>
          </div>
          <h1 class="display-5 text-center">Sistema TUBM</h1>
          <p class="text-center lead">Crie sua conta.</p>
        </div>
        <div class="row">
          <div class="col-lg"> 
            <form action="/register" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">

              <div class="form-group">
                <label for="name" class="required">Nome</label>
                <input type="text" id="name" class="form-control" name="name" placeholder="Digite o seu nome completo" autocomplete="name" required>
                <p class="error" id="p-name" hidden></p>
              </div>

              <div class="form-group">
                <label for="cpf" class="required">CPF</label>
                <input type="text" class="form-control cpf-style" id="cpf" name="cpf" placeholder="Digite o CPF" maxlength="14" autocomplete="off" required>
                <p class="error" id="p-cpf" hidden></p>
              </div>

              <div class="form-group">
                <label for="email" class="required">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Digite o seu Email" autocomplete="email" required>
                <p class="error" id="p-email" hidden></p>
              </div>

              <div class="form-group">
                <label for="tel" class="required">Telefone</label>
                <input type="tel" class="form-control  phone-style" id="tel" name="tel" placeholder="Digite o seu Telefone" autocomplete="tel" required>
                <p class="error" id="p-tel" hidden></p>
              </div>

              <div class="form-group">
                <label for="password" class="required">Senha</label>
                <div class="input-group">
                  <input type="password" class="form-control" id="password" id="password" name="password" placeholder="Digite a senha">
                  <button  id="showPassword" type="button">
                    <i class='fas fa-eye-slash'></i>
                  </button>
                </div>
                <p class="error" id="p-password" hidden></p>
              </div>

              <div class="form-group">
                <label for="password-repeat" class="required">Repetir senha</label>
                <div class="input-group">
                  <input type="password" class="form-control" id="password-repeat" name="password-repeat" placeholder="Digite a senha">
                  <button  id="showPassword-repeat" type="button">
                    <i class='fas fa-eye-slash'></i>
                  </button>
                </div>
                <p class="error" id="p-password-repeat" hidden></p>
              </div>

              <button type="submit" class="btn-primary">Cadastrar</button>
            </form>

            <div>
              <div class="separacao">
                <span></span>
                ou
                <span></span>
              </div>
              <a href="/">
                <button class="btn-secundary">Entrar</button>
              </a>
            </div>
          </div>
          </div>
        </div>
      </div>

      <div class="col-lg-2"></div>
    </div>
  </div>
</main>


<%- include('includes/footer')%>
