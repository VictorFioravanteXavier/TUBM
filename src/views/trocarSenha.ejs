<%- include('includes/head')%>
<link rel="stylesheet" href="/frontend/assets/css/login/style.css">

<main>
  <div class="container">
    <%- include('includes/messages') %>

    <div class="row"> 
      <div class="col-lg">
        <div class="col-lg logo mb-5">
          <div class="icon">
            <i class="fa-solid fa-cart-shopping"></i>
          </div>
          <h1 class="display-5 text-center">Sistema TUBM</h1>
          <p class="text-center lead">Digite sua nova senha.</p>
        </div>
        <div class="row">
          <div class="col-lg"> 
            <form class="form-trocar-senha" action="/trocar-senha/send/" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label>Nova senha</label>
                <div class="input-group">
                  <input type="password" class="form-control" name="senha" placeholder="Senha">
                  <button  id="showPassword" type="button">
                    <i class='fas fa-eye-slash'></i>
                  </button>
                </div>
                <p class="error" id="p-senha"></p>
              </div>
              <div class="form-group">
                <label>Repita a senha</label>
                <div class="input-group">
                  <input type="password" class="form-control" name="rep_senha" placeholder="Repita a nova senha">
                  <button  id="showPassword-repeat" type="button">
                      <i class='fas fa-eye-slash'></i>
                  </button>
                </div>
                <p class="error" id="p-repSenha"></p>
              </div>
              <button type="submit" class="button-primary">Salvar alteração</button>
            </form>
          </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</main>
<%- include('includes/footer')%>
