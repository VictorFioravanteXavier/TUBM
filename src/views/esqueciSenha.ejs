<%- include('includes/head')%>
<link rel="stylesheet" href="/frontend/assets/css/login/style.css">

<main>
  <div class="container">
    <%- include('includes/messages') %>

    <div class="row"> 
      <div class="col-lg">
        <div class="col-lg logo mb-5">
          <div class="icon">
            <i class="fa-solid fa-cart-shopping"></i>
          </div>
          <h1 class="display-5 text-center">Sistema TUBM</h1>
          <p class="text-center lead">Digite seu email para receber o link de recuperção.</p>
        </div>
        <div class="row">
          <div class="col-lg"> 
            <form class="form-login" action="/esqueci-senha/send/" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email" placeholder="Email">
                <p class="error" id="p-email"></p>
              </div>
              <button type="submit" class="button-primary">Enviar</button>
            </form>

            <div>
              <div class="separacao">
                <span></span>
                ou
                <span></span>
              </div>
              <a href="/">
                <button class="button-secundary">Voltar para o Login</button>
              </a>
            </div>

          </div>
          </div>
        </div>
      </div>

      <div class="col-lg-2"></div>
    </div>
  </div>
</main>
<%- include('includes/footer')%>
