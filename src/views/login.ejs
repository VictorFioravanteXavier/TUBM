<%- include('includes/head')%>
<link rel="stylesheet" href="/frontend/assets/css/login/style.css">
<div class="container">
  <%- include('includes/messages') %>

  <div class="row"> 
    <div class="col-lg">
      <div class="col-lg logo mb-5">
        <div class="icon">
          <i class="fa-solid fa-cart-shopping"></i>
        </div>
        <h1 class="display-5 text-center">Sistema TUBM</h1>
        <p class="text-center lead">Acesse sua conta.</p>
      </div>
      <div class="row">
        <div class="col-lg"> 
          <form class="form-login" action="/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" name="email" placeholder="Email">
            </div>
            <div class="form-group">
              <label>Senha</label>
              <div class="input-group">
                <input type="password" class="form-control" id="password-login" name="password" placeholder="Senha">
                <button  id="showPassword" type="button">
                  <i class='fas fa-eye-slash'></i>
                </button>
              </div>
            </div>
            <button type="submit" class="button-primary">Entrar</button>
          </form>

          <div>
            <div class="separacao">
              <span></span>
              ou
              <span></span>
            </div>
            <a href="/cadastro">
              <button class="button-secundary">Cadastrar</button>
            </a>
          </div>

        </div>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')%>
